.fadingRestaurant{
    z-index: -2;
    position: fixed;
    top: 0;
    left: 0;
    width:100%;
    height:100%; 
    background-color: rgba(255,255,255,0);
    animation: fadingRestaurantAnim 1s ease-out; 
    animation-fill-mode: backwards; 
    animation-iteration-count: 1;
}

@keyframes fadingRestaurantAnim  {
    0% { 
        background-color: rgba(255,255,255,1); 
        z-index: 10;
        }
        99.999% {
        background-color: rgba(255,255,255,0);
        z-index: 10;
        } 
        100% { 
        background-color: rgba(255,255,255,0);
        z-index: -2;
        }
}


/****** mobile: header  ******/

nav{
    padding: 25px;
    display: flex;
    justify-content: space-around;
}

.restaurant-window{
    object-fit: cover;
    width: 100%;
    height: 200px; 
}


/****** mobile: section restaurantMenu ******/

.subHeader{
    position: relative;
}

.restaurantMenu{
    margin-top:-26px;
    left: 0;
    right: 0;
    border-radius: 25px 25px 0 0;
    padding: 35px 15px;
    background-color: var(--main-bg-color);

}

.restaurantTitle{
    position:relative;
    padding-right: 1px;
    display: flex;
    justify-content: space-between;
}

h1{
    font-family: Shrikhand;
    font-weight: 300;
    font-size: 1.73rem;

}

.heartBox{    
    position: relative; 
    right: 15px;
    font-size: 25px;
}

.restaurantName{
    font-family: 'Shrikhand', cursive;
}


/* mobile: sections entrées /plats / desserts*/

.dishesType{
    padding: 10px 0;
    text-transform:uppercase;
    font-weight: 300;
    font-size: 18px;
    color: var(--semi-dark-font-color);
}

.titleUnderline{
    border-bottom: solid 4px var(--tertiary-color);
    padding: 0 0 10px 0;
}

.dishesList{
    padding: 25px 0 25px 0;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.dishCard{
    
    position: relative;
    border-style: none;
    box-shadow: 0px 0px 10px 0px  rgba(236, 234, 234, 0.356);
    border-radius: 15px;
    background-color: white;
    display: flex;
    justify-content: space-between;
    overflow: hidden;
}


.dishDescription{
    border: solid 1px blue;
    width: calc(100% - 55px);
    padding: 10px  0 10px 10px;   
}

.dishName, .dishAccompaniments{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


.dishCard:hover .dishDescription {
    animation: textReduction 0.5s linear ;
    animation-fill-mode:forwards;

}


@keyframes textReduction {
    from{
        width: calc(100% - 55px);
    }
    to{
        width: calc(100% - 120px);
    } 
}
 

.dishCard:hover .dishPriceAndCheck{
    animation: priceAndCheckTranslate 0.7s .1s linear;
    animation-fill-mode:forwards;
}

/* .customCheck:hover .dishPriceAndCheck{
    animation: priceAndCheckTranslate 0.7s .1s linear ease-out;
    animation-fill-mode:forwards;
} */


@keyframes priceAndCheckTranslate {
    100%{ transform: translateX(-65px); }
}

.dishCard:hover .dishPriceAndCheck .checkButton .fa-check{
    animation: faCheckWarning  linear 2s 1;
    animation-fill-mode:forwards;
}

@keyframes faCheckWarning{
    0%{
        opacity: 0;
    }
    25%{
        opacity: 1;
    }
    50%{
        opacity: 0;
    }
    75%{
        opacity: 1;
    }
    100%{
        opacity: 0;
    }
}


.dishDescription{
    width: calc(100% - 55px);
    padding: 10px  0 10px 10px;   
}

.dishName{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.dishAccompaniments{    
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.dishPriceAndCheck{
    position: relative;
    display: flex;
    align-items: end;
}

.dishPrice{      
    display: inline-block;
    width: 45px;
    padding: 0 0 10px 0;
    text-align: center;
    font-weight: 700;
    vertical-align: bottom;
}


.checkButton{
    position: absolute;
    display:flex ;
    justify-content:center; 
    align-items: center;
    height: 100%;
    right: -65px;
    width: 65px;
    border-radius: 0 15px 15px 0;
    background-color: var(--tertiary-color);
}

.checkBox{
    position: absolute;
    top: 50%;
    left:50%;
    transform: translate(-50%, -50%);
}

.fa-circle-check, .fa-circle{
    color: white;
}


/*=====================================
** CHECKS
======================================= */

.fa-circle{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 25px;
    color: white;
}

.fa-check{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 16px;
    color:var(--tertiary-color)
}

.dishPriceAndCheck{
    height: 100%;
}

    .customCheck input {
        display: none;
    }
 
    .customCheck input:checked ~ .dishPriceAndCheck{
        transform: translateX(-65px);

    }

    
    .customCheck input:checked ~ .dishPriceAndCheck .checkButton .fa-circle {
       animation: none;
    }

    .customCheck input:checked ~ .dishPriceAndCheck .checkButton .fa-check {
        animation: none;
    }



/****** mobile: Commander */

.command{
    width: 100%;
    display: flex;
    justify-content: center;
}

.command button{
    width: 180px;
}



/******* mobile: footer ******/

footer{
    padding: 10px 20px;
    background-color: var(--semi-dark-bg-color);    
}
footer *{    
    color: var(--clear-font-color);
    font-weight: 400;

}
footer h2{
    padding: 10px 0;
    font-family: 'Shrikhand', cursive;
    font-size: 18px;
    font-weight: 400;
}

.footerBox a{
    display: inline-block;
    padding: 2px 0;
}
.footerItem{
    padding: 2px 0;
}

.footerItem{
    display: flex;
    align-items: center;
}

.footerIconBox{
    padding: 0 10px 0 0;
}